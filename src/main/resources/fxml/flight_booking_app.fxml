<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER" fx:controller="com.prashanth.flight.controller.FlightController">
    <Label text="Flight Booking System" />

    <TextField fx:id="originTextField" promptText="Origin" />
    <TextField fx:id="destinationTextField" promptText="Destination" />

    <Button text="Search Flights" onAction="#searchFlights" />
</VBox>
