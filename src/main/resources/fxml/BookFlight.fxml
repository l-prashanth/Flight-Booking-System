<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.prashanth.flight.controller.FlightController">
    <stylesheets>
        <URL value="@dark_style.css" />
    </stylesheets>
    <center>
        <VBox spacing="10" styleClass="dark-vbox">
            <HBox spacing="10">
                <HBox>
                    <Label text="From: " styleClass="dark-label"/>
                    <ComboBox fx:id="fromLocationOption" styleClass="dark-combobox">
                    </ComboBox>
                </HBox>
                <HBox>
                    <Label text="To: " styleClass="dark-label"/>
                    <ComboBox fx:id="toLocationOption" styleClass="dark-combobox">
                    </ComboBox>
                </HBox>
                <HBox>
                    <Label text="Depart: " styleClass="dark-label"/>
                    <DatePicker fx:id="departDate" styleClass="dark-datepicker"/>
                </HBox>
                <HBox>
                    <Label text="Return: " styleClass="dark-label"/>
                    <DatePicker fx:id="returnDate" styleClass="dark-datepicker"/>
                </HBox>
                <HBox>
                    <Label text="FlightType: " styleClass="dark-label"/>
                    <ComboBox fx:id="flightTypeOption" styleClass="dark-combobox" />
                </HBox>
            </HBox>


            <HBox>
                <Button text="Click Me" onAction="#findFlightButtonClick" styleClass="dark-button"/>
            </HBox>


            <TableView fx:id="tableView" styleClass="modern-table-view" VBox.vgrow="ALWAYS" visible="false" onMouseClicked="#handleTableRowClick">
<!--                to fill the screenpane size-->
<!--                <columnResizePolicy>-->
<!--                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />-->
<!--                </columnResizePolicy>-->
            </TableView>
            <HBox>
                <Button fx:id="bookButton" text="Book Flight" onAction="#handleBookingButtonClick" styleClass="dark-button" visible="false"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>

